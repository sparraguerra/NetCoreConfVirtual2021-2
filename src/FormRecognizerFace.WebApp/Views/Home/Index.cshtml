@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}


<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="FileUpload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Select the company on which you are going to send the invoice:</p>
            <select asp-for="CompanyId"  asp-items="Model.Companies"></select>
        </div>
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
